#!/usr/bin/env php
<?php

if (is_file(__DIR__ . '/../../../autoload.php')) {
    require __DIR__ . '/../../../autoload.php';
    $dspecPath = __DIR__ . '/../../../bin/dspec';
} else if (is_file(__DIR__ . '/../vendor/autoload.php')) {
    require __DIR__ . '/../vendor/autoload.php';
    $dspecPath = __DIR__ . '/../vendor/bin/dspec';
}

$start = microtime(true);

use DKoehn\DSpec\Application\Application;
use DKoehn\DSpec\Application\CliArgsParser;
use DKoehn\DSpec\Application\Environment;
use DKoehn\DSpec\Application\InputDefinition;

$parser = new CliArgsParser(['-c', '--configuration'], $argv);
$environment = new Environment(
    new InputDefinition(),
    $dspecPath,
    rtrim(getcwd())
);

$application = new Application($environment);
$application->run();
